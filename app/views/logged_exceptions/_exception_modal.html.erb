<div id="exceptionModal" class="modal" tabindex="-1" role="dialog" aria-hidden="false" style="display: none;">
  <div class="modal-header">
    <button type="button" class="close fui-cross" data-dismiss="modal" aria-hidden="true"></button>
    <h3>Exception Details</h3>
  </div>

  <div class="modal-body">
    <% @exception_details.each do |detail| %>
      <span><%= detail.trace_line %></span>
    <% end %>
  </div>

  <div class="modal-footer">
    <button id="selectException" class="btn btn-primary">Select Exception</button>
  </div>
</div>
